{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "inlineSourceMap": false,
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "jest"
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}